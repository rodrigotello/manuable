.event-show
  %div{ style: "border-bottom: 5px solid #000;background-image: url(#{@event.cover.url}); width: 1200px; height: 390px;" }
  %ul.nav.nav-pills.row-fluid.event-nav{ data: { "spy" => 'affix', "offset-top" => '414' }}
    %li.active.span3.text-center
      %a{ href: "#desc" }
        Descripción
        %br
        del Evento
    %li.span3.text-center
      %a{ href: "#itinerary", style: 'line-height: 40px' }
