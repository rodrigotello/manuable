<div id="profile-premium">
  
  <section class="profile-hero">
    <div class="container profile-content">
      <div class="twelve columns text-center">
        <h1 class="white-text"><%= @user.name %></h1>
        <div class="profile-avatar">
          <a href="#" class="profileTooltip">
            <div class="avatar-img"></div>
          </a>
        </div>
        <h3><%= @user.location %></h3>
        <h5><%= @user.about %></h5>
      </div>
      <div class="profile-actions">
        <% if current_user && @user != current_user %>
          <%= link_to '<i class="fa fa-envelope-o"></i> Enviar Mensaje'.html_safe, new_my_conversation_path(to: @user.id), class: 'btn btn-regular', id: 'message-user', rel: 'modal' %>
          <% if @user.followed_by? current_user %>
            <%= link_to '<i class="fa fa-arrow-right"></i> Siguiendo'.html_safe, unfollow_user_path(@user), method: 'delete', remote: true, id: 'follow-user' %>
            <% else %>
            <%= link_to '<i class="fa fa-arrow-right"></i> Seguir'.html_safe, follow_user_path(@user), method: 'post', remote: true, id: 'follow-user' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section> 
  
  <nav class="profile-nav">
    <ul class="row profile-tabs">
      <li class="oneFifth tab active">
        <a href="#store">Mi Marca</a>
      </li>
      <li class="oneFifth tab">
        <a href="#about">Acerca de</a>
      </li>
      <li class="oneFifth tab">
        <a href="#likes">Mis Gustos</a>
      </li>
      <li class="oneFifth tab">
        <a href="#followers">Seguidores</a>
      </li>
      <li class="oneFifth tab">
        <a href="#followees">Siguiendo</a>
      </li>
    </ul>
  </nav>

  <!-- MI MARCA -->
  <div class="container tab-container">
    <section id="store" class="tab-content active">
      <div class="row">
        <div class=" twelve columns text-center">
