.activities{id: "#{params[:controller]}-#{params[:action]}-feed"}
  = render partial: '/products/create', collection: products, as: :product
  - if params[:format] != 'json'
    - content_for :script do
      feedPagination('##{params[:controller]}-#{params[:action]}-feed', #{products.total_pages}, #{params[:page]||1}, '#{request.path}' );
