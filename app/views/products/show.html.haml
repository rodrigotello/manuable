- content_for :facebook_optimization do
  = product_metadata @product

= div_for @product, class: 'product clearfix' do
  %h2= @product.name
  %h5= @product.category.try :name
  .flexslider
    %ul.slides
      - @product.attachments.each do |attachment|
        %li
          = div_image attachment.attachment.url( :xlarge ), class: 'product-avatar'
  .product-options.clearfix
    = link_to '<i class="fa fa-heart-o">&nbsp;</i>Me gusta'.html_safe, like_product_path(@product, format: 'json'), class: 'manuable-like', remote: true, method: :post
    = link_to '<i class="fa fa-envelope-o">&nbsp;</i>Mensaje'.html_safe, '#', class: 'message'
    = link_to '<i class="fa fa-share-square-o">&nbsp;</i>Compartir'.html_safe, 'https://www.facebook.com/sharer/sharer.php?u=#{CGI.escape product_url(@product)}', class: 'fbshare', target: '_blank'
  .product-description
    = @product.about
  .spacer
  = commontator_thread(@product)
  = if params[:no_layout] == '1'
    :javascript
      ProductsShow.init();
-#.row-fluid.product
  -#.span3
    -#.sidebar.text-center
      -#= image_tag @user.avatar.url(:medium), class: 'user-avatar'
      -#= for_logging_user_only do
        -#- if @user != current_user
          -#.text-center
            -#- if @user.followed_by? current_user
              -#%span.btn.btn-mini.btn-success.active.disabled
                -#%i.icon-ok
                -#Siguiendo
            -#- else
              -#= link_to '<i class="icon-plus"></i> Seguir'.html_safe, user_followings_path(@user), method: 'post', remote: true, id: 'follow', class: 'btn btn-mini'
        -#- unless user_signed_in?
          -#= link_to '<i class="icon-plus"></i> Seguir'.html_safe, "#sign_popup", "data-toggle" => "modal", id: 'follow', class: 'btn btn-mini'

        -#%h3.user-name
          -#= @user.name
        -#.occupation
          -#= @user.occupation
        -#.birthday
          -#- if @user.birthday.present?
            -#= "Nacido el #{l @user.birthday, format: :birthday}"
        -#.about
          -#- if @user.location.present?
            -#%small
              -#= @user.location
      -#%p
        -#= truncate @user.about, length: 100, omission: '...'
      -#- if @user.followers.count > 0
        -#.module
          -#%h6 Seguidores
          -#%ul#followers.media-list
            -#- @user.followers.limit(5).each do |u|
              -#%li.media{ id: "follower-#{u.id}"}
                -#= image_tag u.avatar.url(:thumb), class: 'media-object pull-left'
                -#.media-body
                  -#= link_to u.name, u
      -#- if @user.followees.count > 0
        -#.module
          -#%h6 Siguiendo
          -#%ul#followees.media-list
            -#- @user.followees.limit(5).each do |u|
              -#%li.media{ id: "followee-#{u.id}" }
                -#= link_to u, class: 'pull-left' do
                  -#= image_tag u.avatar.url(:thumb), class: 'media-object pull-left'
                -#.media-body
                  -#= link_to u.name, u
  -#.span9
    -#- link_to "<i class='icon-share-sign'></i>".html_safe, "https://www.facebook.com/sharer/sharer.php?u=#{CGI.escape product_url(@product)}", target: "_blank", class: 'fbshare'
    -#= div_image @product.attachments.first.attachment.url(:xlarge), class: 'product-image-xlarge', 'data-medium' => @product.attachments.first.attachment.url(:medium)
    -#=# image_tag , class: 'product-image', 'data-medium' => @product.attachments.first.attachment.url(:medium)
    -#.product-description
      -#.product-name
        -#%h4= @product.name
      -#.product-about
        -#= @product.about
      -#.product-tags
        -#= hashify(@product.prop_list)
    -#.product-pictures
      -#- if @product.attachments.length > 1
        -#.thumbnail-box.clearfix.row-fluid
          -#- @product.attachments[1, 3].each do |attachment|
            -#.span4
              -#= div_image attachment.attachment.url(:medium), class: 'product-image-medium', 'data-xlarge' => attachment.attachment.url(:xlarge)
    -#%ul#likers
      -#- @product.likers.recent_first.each do |user|
        -#- next if user.first_name.blank?
        -#%li
          -#.media
            -#= link_to user_path(user), id: dom_id(user), class: 'pull-left' do
              -#= image_tag user.avatar.url(:thumb), class: 'media-object'
            -#.media-body
              -#a
              -#= link_to user.first_name, user_path(user), id: dom_id(user)
              -#le gusta
