<div id="comment_<%= comment.id.to_s %>_div" class="comment">
  <div id="comment_<%= comment.id.to_s %>_gravatar_image_span" class="comment_gravatar_image">
    <%= div_image comment.creator.avatar.url(:small) %>
  </div>

  <div id="comment_<%= comment.id.to_s %>_commontator_span" class="comment_commontator">
    <% if user && user.commontator_config.user_name_clickable %>
      <%= link_to commontator_name(comment.creator), main_app.polymorphic_path(comment.creator) %>
    <% else %>
      <%= commontator_name(comment.creator) %>
    <% end %>
  </div>

  <div id="comment_<%= comment.id.to_s %>_actions_span" class="comment_actions">
    <%= render :partial => 'commontator/comments/actions',
               :locals => { :comment => comment,
                            :user => user } %>
  </div>

  <div id="comment_<%= comment.id.to_s %>_votes_span" class="comment_votes">
    <%= render :partial => 'commontator/comments/votes',
               :locals => {:comment => comment,
                           :user => user} %>
  </div>

  <div id="comment_<%= comment.id.to_s %>_body_div" class="comment_body">
    <%= render :partial => 'commontator/comments/body',
               :locals => {:comment => comment} %>
  </div>

  <div id="comment_<%= comment.id.to_s %>_created_timestamp_span" class="comment_timestamp">
    <%= comment.created_timestamp %>
  </div>

  <div id="comment_<%= comment.id.to_s %>_updated_timestamp_span" class="comment_timestamp">
    <% if comment.is_modified? %>
      <%= comment.updated_timestamp %><%= " by #{commontator_name(comment.editor)}" %>
    <% end %>
  </div>
</div>
