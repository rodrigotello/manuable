!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Manuable"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="favicon.ico" rel="shortcut icon")

  %body{ id: "#{params[:controller]}-#{params[:action]}", data: { page: [controller_name.capitalize, action_name.capitalize].join } }
    .container
      = render partial: '/shared/navigation_bar'
      = bootstrap_flash
      = yield
      %footer
    = javascript_include_tag "application"

    - if user_signed_in?
      = js_data
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-40661726-1', 'manuable.com');
      ga('send', 'pageview');

    = render partial: "/shared/product_wizard"
    = render partial: "/shared/login" unless user_signed_in?
    %script{ type: "text/x-handlebars-template", id: "plain-modal-template" }
      \ <div class="modal hide fade">
      \   <div class="modal-header">
      \     <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      \     <h3>{{title}}</h3>
      \   </div>
      \   <div class="modal-body">
      \     {{body}}
      \   </div>
      \ </div>

