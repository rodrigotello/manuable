.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to image_tag("logo.svg"), root_path, class: 'brand'
      .container.nav-collapse
        %ul.nav
          %li
            %a.dropdown-toggle{ "data-toggle" => "dropdown", :href => "#" } Descubre
            %ul.dropdown-menu{ :role => "menu"}
              - Category.product_category.each do |category|
                %li
                  = link_to category.name, category_path(category)
          - if user_signed_in?
            %li
              = link_to 'Comparte', new_my_product_path, "data-toggle" => "modal", :href => "#product_wizard", :role => "button"
        %ul.nav.pull-right
          / %li
          /   = link_to "<i class='icon-search'></i>".html_safe, "#"
          %li.divider-vertical
          - if !user_signed_in?
            %li#login-options
              %a.dropdown-toggle{ "data-toggle" => "dropdown", :href => "#" } Entrar
              %ul.dropdown-menu
                %li
                  = link_to "<i class='icon-facebook-sign'></i>".html_safe, user_omniauth_authorize_path(:facebook)
                  = link_to "<i class='icon-google-plus-sign'></i>".html_safe,   user_omniauth_authorize_path(:google_oauth2)
                  = link_to "<i class='icon-twitter-sign'></i>".html_safe,  user_omniauth_authorize_path(:twitter)
                  = link_to "<i class='icon-envelope-alt'></i>".html_safe,  new_user_registration_path, rel: "modal"
          - else
            %li#current-user-options
              %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#" }
                = image_tag current_user.avatar.url(:small).to_s
                %span
                  &nbsp;&nbsp;
                  = current_user.name
              %ul.dropdown-menu
                %li
                  = link_to "<i class='icon-user'></i> Mi perfil".html_safe, my_profile_path
                %li.divider
                %li
                  = link_to "<i class='icon-cogs'></i> Preferencias".html_safe, edit_my_profile_path(f: 's')
                %li
                  = link_to "<i class='icon-off'></i> Salir".html_safe, destroy_user_session_path, method: :delete
