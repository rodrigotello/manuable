.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to image_tag("logo.svg"), root_path, class: 'brand'
      = link_to 'Crear Mercadito', '#', class: 'transparent-button', id: 'nav-crear-mercadito'
      %ul.nav.pull-right
        - if !user_signed_in?
          %li#login-options
            .dropdown
              %a.dropdown-toggle{ "data-toggle" => "dropdown", :href => "#" } Entrar
              %ul.dropdown-menu
                %li
                  = link_to "<i class='icon-facebook-sign'></i>".html_safe, user_omniauth_authorize_path(:facebook)
                  / = link_to "<i class='icon-google-plus-sign'></i>".html_safe,   user_omniauth_authorize_path(:google_oauth2)
                  = link_to "<i class='icon-twitter-sign'></i>".html_safe, user_omniauth_authorize_path(:twitter)
                  = link_to "<i class='icon-envelope-alt'></i>".html_safe, new_session_path(:user), rel: "modal"
        - else
          %li#current-user-options
            .dropdown
              %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#" }
                %div.user-round-avatar{ style: "background-image: url(#{ current_user.avatar.url(:small).to_s })" }
                %span.user-name
                  = current_user.first_name

              %ul.dropdown-menu
                %li
                  = link_to "<i class='icon-user'></i> Mi perfil".html_safe, user_path(current_user)
                %li
                  = link_to "<i class='icon-cogs'></i> Mi información".html_safe, edit_my_profile_path(f: 's')
                %li
                  = link_to "<i class='icon-question'></i> Ayuda".html_safe, '/about'
                %li
                  = link_to "<i class='icon-off'></i> Salir".html_safe, destroy_user_session_path, method: :delete
          %li
            = link_to 'Subir Producto', '#', class: 'transparent-button', id: 'nav-subir-producto'
