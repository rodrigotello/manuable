#product_description_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "modal_title", :role => "dialog", :tabindex => "-1"}
	.modal-header
		%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
		%h3#modal_title.text-center Comparte tus productos en manuable
	.modal-body
		.body_question
			.category_selector
			Categorías
			= Category.product_category.select("id,name").each do |cat|
				%label.checkbox
					%input{:type => "checkbox", :id => "product[category]", :value => "#{cat.id}"}
					= cat.name
			.product_details
			.form-horizontal
				.control-group
					%label.control-label{:for => "product[price]"} Precio
					.controls
					.input_prepend.input-append
						.add-on $
						%input.text-right{:id => "product[price]", :type => "text"}
						.add-on .00 MXN
				.control-group
					%label.control-label{:form => "product[amount]"} Cantidad
					.controls
						%input.numeric.integer.tipinfo{:id => "product[amount]", :type => "number", :min => "0"}
				.control-group
					%label.control-label{:for => "product[description]"} Descripción
					.controls
						%textarea{:id => "product[description]", :rows => 3}
		.modal-footer
			%p
				%button.btn{:id=> "btt_reg_cancel", :type => "button"} Cancelar
				%button.btn.btn-success{:id=> "btt_reg",:type => "button"} Registrar
